<% if current_user %>
<div style="float:right; margin-top:40px; margin-right:10px;">
<script type='text/javascript'>
if (top.location!= self.location)
{
top.location = self.location
}
</script>

<script src="http://connect.facebook.net/en_US/all.js"></script>
<script>
FB.init({
appId:'355925254475686',
cookie:true,
status:true,
xfbml:true
});

function FacebookInviteFriends()
{
FB.ui({
method: 'apprequests',
message: 'Your Message diaolog'
});
}
</script>
<div class="btn-group">
<button class="btn dropdown-toggle btn-success" data-toggle="dropdown">
<img src="<%= current_user.image %>" style="height:20px; width:20px; border:1px solid #fff; border-radius: 2px;" /> <%= current_user.first_name %>'s NYSE
<span class="caret"/>
</button>
<ul class="dropdown-menu">
<li>
<a href="/users/<%= current_user.id %>/edit"><i class="icon-cog icon-white"></i> Edit Profile</a>
</li>
<li>
<a href='#' onclick="FacebookInviteFriends();"> 
<i class="icon-ok-sign icon-white"></i>Invite Facebook Friends
</a>
</li>
<li>
<a href='#'>
<i class="icon-ok-sign icon-white"></i>My Applications
</a>
</li>
<li class="divider"/>
<li>
<%= link_to "Sign out", signout_path %>
</li>
</ul>
</div>
  <% else %>
  <div style="float:right; margin-top: 47px; margin-right:10px;">
    <%#= link_to image_tag('/assets/images/facebook_signin.png'), "/auth/facebook", id: "sign_in" %>
    <%= link_to image_tag('/assets/images/linkedin_signin.png'), "/auth/linkedin"%>
    <%#= link_to 'Linked in', "/auth/linkedin", id: "sign_in" %>  
  <% end %>
</div>