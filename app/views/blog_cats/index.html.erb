<h1>Listing blog_cats</h1>

<table>
  <tr>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @blog_cats.each do |blog_cat| %>
  <tr>
    <td><%= blog_cat.title %></td>
    <td><%= link_to 'Show', blog_cat %></td>
    <td><%= link_to 'Edit', edit_blog_cat_path(blog_cat) %></td>
    <td><%= link_to 'Destroy', blog_cat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

