<!DOCTYPE html>
<% @currentpage = @page.id %>
<html>
<head>
  <title>New York Staff Exchange</title>
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
<%= render "nav" %>

  <div class="container">

    <% flash.each do |name, msg| %>
      <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
        <a class="close" data-dismiss="alert">Ã—</a>
        <%= msg %>
      </div>
    <% end %>

    <div class="row">
      <div class="span9" style="max-width:830px;">
        <%= render "breadcrumb" %>
        <% if @page.id == 1 %>
        <%= render "slider" %>
        <% end %>
          <div class="well">
            <%= yield %>
              <% if @currentpage == 1 %>
                <%= render "services" %>
              <% end %>
              <% if @currentpage == 2 %> 
                <%= render "services" %>
              <% end %>
              <% if @currentpage == 30 %>
                <%= render "services" %>
              <% end %>
              <% if @currentpage == 9 %>
                <%= render "services" %>
              <% end %>
              <% if @currentpage == 10 %>
                <%= render "services" %>
              <% end %>
          </div>
              <% if @currentpage == 1 %>
                <%= render "companies" %>
              <% end %>
      </div>

      <%= render "profile" %>

      <%= render "subnav" %>

      <%= render "topjobs" %>

    </div>
  </div>

    <%= render "footer" %>

 <script>
  $('.carousel').carousel({
    interval: 7000
  })
</script> 
</body>
</html>