<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this site_info from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-horizontal">

<fieldset>
<legend>Task Details</legend>

<div class="control-group">
<label class="control-label" for="input01">Task Title</label>
<div class="controls">
    <%= f.text_field :title, :class => "input-xlarge" %>
</div>
</div>

<div class="control-group">
<label class="control-label" for="input01">Task Notes</label>
<div class="controls">
    <%= f.text_area :note, :class => "input-xxlarge", :rows => 10 %>
</div>
</div>

<div class="control-group">
<label class="control-label" for="input01">Due Date</label>
<div class="controls">
    <%= f.text_field :due, :value => Date.today, :class => "due" %>
</div>
</div>

<div class="control-group">
<label class="control-label" for="optionsCheckbox">is the task completed?</label>
<div class="controls">
<label class="checkbox">
<%= f.check_box :complete %>
</label>
</div>
</div>

    <%= f.hidden_field :company_admin_id, :value => current_company_admin.id %>
    <%= f.hidden_field :company_id, :value => current_company_admin.company_id %>

<div class="form-actions">
<%= f.submit "Save Task", :class => "btn btn-primary" %>
</div>

</fieldset>
</div>

<% end %>

  <script>
    $(function(){
      $('.due').datepicker({
        format: 'yyyy-mm-dd'
      });
    });
  </script>